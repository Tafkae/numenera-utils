<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Test utils functions</title>
    <style>
      .message {
        width: auto;
        height: fit-content;
        overflow: hidden;
        opacity: 1;
      }

      .message.hidden {
        opacity: 0;
        transition: opacity 1s ease-in;
      }

      .message.success {
        background-color: lightgreen;
        color: darkgreen;
      }
      .message.failure {
        background-color: pink;
        color: darkred;
      }
    </style>
  </head>
  <body>
    <%- include('nav-primary.ejs') %>
    <h1>Test utils functions</h1>

    <section id="test-savelocal">
      <h2>saveLocal()</h2>

      <h3 class="char-name"></h3>
      <div class="char-summary"></div>

      <button type="button" id="btn-save-local">Save Local</button>
      <div class="message hidden"></div>
    </section>

    <section id="test-loadlocal">
      <h2>loadLocal()</h2>

      <h3 class="char-name"></h3>
      <div class="char-summary"></div>

      <button type="button" id="btn-load-local">Load from Local</button>
      <div class="message hidden"></div>
    </section>

    <section id="test-parse">
      <h2>tryParseJsonObj()</h2>

      <h3 class="char-name"></h3>
      <div class="char-summary"></div>

      <button type="button" id="btn-parse">Parse it</button>
      <div class="message hidden"></div>
    </section>

    <script src="/scripts/test.js" type="module"></script>
  </body>
</html>
