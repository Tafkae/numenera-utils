{
  "name": "numenera-utils",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "sass-watch": "sass --watch --update --style=expanded assets/scss:public/stylesheets",
    "sass-prod": "sass --no-source-map --style=compressed assets/scss:public/stylesheets",
    "nodemon-watch": "nodemon ./bin/www -e",
    "dev": "npm-run-all --parallel sass-watch nodemon-watch",
    "start": "node ./bin/www",
    "test": "jest --verbose"
  },
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "ejs": "^3.1.10",
    "express": "^4.21.2",
    "http-errors": "~1.6.3",
    "morgan": "~1.9.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "nodemon": "^3.1.9",
    "npm-run-all": "^4.1.5",
    "sass": "^1.85.1"
  }
}
