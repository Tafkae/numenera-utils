<% for( let stat of ["Might", "Speed", "Intellect"] ) { %>
<fieldset>
  <legend><%= stat %></legend>
  <% stat = stat.toLowerCase() %>
  <div class="pool-current">
    <label>Pool <input type="number" name="<%= stat %>-pool" id="<%= stat %>-pool" /></label>
    <div class="show-your-work"></div>
  </div>
  <div class="pool-max">
    <label>Max <input type="number" name="<%= stat %>-max" id="<%= stat %>-max" /></label>
    <div class="show-your-work"></div>
  </div>
  <div class="pool-edge">
    <label>Edge <input type="number" name="<%= stat %>-edge" id="<%= stat %>-edge" /></label>
    <div class="show-your-work"></div>
  </div>
  <% if (stat === "speed") { %>
  <div class="effort-cost">
    <label>Effort Cost from Armor <input type="number" name="speed-cost" id="speed-cost" /></label>
  </div>
  <% } %>
</fieldset>
<% } %>
