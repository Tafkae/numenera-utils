<% for( let stat of ["Might", "Speed", "Intellect"] ) { %>
<fieldset>
  <legend><%= stat %></legend>
  <% stat = stat.toLowerCase() %>
  <div class="pool-current">
    <label>Pool <input type="number" name="<%= stat %>-pool" id="<%= stat %>-pool" /></label>
    <div class="show-your-work" id="syw-<%= stat %>-pool"></div>
  </div>
  <div class="pool-max">
    <label>Max <input type="number" name="<%= stat %>-max" id="<%= stat %>-max" /></label>
    <div class="show-your-work" id="syw-<%= stat %>-max"></div>
  </div>
  <div class="pool-edge">
    <label>Edge <input type="number" name="<%= stat %>-edge" id="<%= stat %>-edge" /></label>
    <div class="show-your-work" id="syw-<%= stat %>-edge"></div>
  </div>
  <% if (stat === "speed") { %>
  <div class="effort-cost">
    <label>Effort Cost from Armor <input type="number" name="speed-cost" id="speed-cost" /></label>
    <div class="show-your-work" id="syw-speed-cost"></div>
  </div>
  <% } %>
</fieldset>
<% } %>
<fieldset id="pool-assign" class="invisible">
  <legend>Assign points</legend>
  <p>
    You get <span id="pool-assign-start">6</span> points to assign to any Pool(s) you want.
  </p>
  <p>(<span id="pool-assign-remaining">6</span> remain)</p>
</fieldset>
